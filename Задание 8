#include<iostream>
#include<cmath>
using namespace std;
int func(int n){
    if (n==1){
        return 1;
    }
    if (n%2==0){
        return func(n/2);
    } else{
        return func(n/2) + func(n / 2 +1);
    }
}
int main(){
    cout << "VVedite a: ";
    int a;
    cin >> a;
    int res =func(a);
    cout << res;
}
