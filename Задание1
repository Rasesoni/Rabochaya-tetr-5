//////////////////////////////////////////////
#include<iostream>
#include<string>//string
#include<algorithm>// revers find_if
#include<sstream>// std::stringstream, split
#include<fstream>// Файловая обработка
using namespace std;
int main(){
    string s=" i love programing";
    cout << s << endl;
    stringstream a(s);
    string word[];
    int count = 0;
    while( a >> word[count]){
        count++;
    }
    for(int i=count-1;i>=0;i--){
        cout << word[i] << ' ';
    }
    return 0;
}
